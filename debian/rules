#!/usr/bin/make -f
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk
#export QT_SELECT = qt5

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

ifneq (,$(wildcard .git/config))
	CONFIG_VERSION=
else
VERSION = $(DEB_VERSION_UPSTREAM)
_PACK_VER = $(shell echo $(VERSION) | awk -F'[+_~-]' '{print $$1}')
_BUILD_VER = $(shell echo $(VERSION) | awk -F'[+_~-]' '{print $$2}' | sed 's/[^0-9]//g')
ifeq ($(_BUILD_VER),)
	CONFIG_VERSION = $(_PACK_VER)
else
	CONFIG_VERSION = $(_PACK_VER).$(_BUILD_VER)
endif
endif

%:
	dh $@ --parallel
override_dh_auto_clean:
	dh_auto_clean
	rm -rvf $(CURDIR)/src
override_dh_auto_configure:
	mkdir -p $(CURDIR)/src/usr/lib/$(DEB_HOST_MULTIARCH)/ 

	ln -sv /usr/lib/$(DEB_HOST_MULTIARCH)/libdtkcore.so.5 $(CURDIR)/src/usr/lib/$(DEB_HOST_MULTIARCH)/libdtkcore.so.2 

	ln -sv /usr/lib/$(DEB_HOST_MULTIARCH)/libdtkcore.so.5 $(CURDIR)/src/usr/lib/$(DEB_HOST_MULTIARCH)/libdtkcore.so.15 
    

override_dh_auto_test:
	echo "skip auto test"


